<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/activity_maps" />
    <ToggleButton android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="START"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:textOn="STOP"
        />
    <Button android:id="@+id/getOneLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/updateButton"
        android:layout_centerInParent="true"
        android:text="Get Location"
        />
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/map_options_FloatingActionMenu"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#da3c2f"
        fab:menu_colorPressed="#dc4b3f"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="right"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66aff198"
        fab:menu_shadowRadius="1dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="2dp"
        fab:menu_showShadow="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/satelliteFloatingActionButtonItem"
            fab:fab_size="normal"
            fab:fab_label="Sattelite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_directions" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/hybridFloatingActionButtonItem"
            fab:fab_size="normal"
            fab:fab_label="Hybrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_map" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/roadmapFloatingActionButtonItem"
            fab:fab_size="normal"
            fab:fab_label="Road Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_mapmode" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/normalFloatingActionButtonItem"
            fab:fab_size="normal"
            fab:fab_label="Normal Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_mapmode" />
    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>